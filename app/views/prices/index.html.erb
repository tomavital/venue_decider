<div class="page-header">
  <h1>
    Prices

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Price Range</th>
        <th>Number of Venues</th>
        <th>Find Venues</th>
      </tr>

      <% @prices.each do |price| %>
      <tr>
        <td><%= price.range %></td>
        <td><%= Venue.where(:average_price => price.id).count %> </td>

        <td>
          <a href="/prices/<%= price.id %>" class="btn btn-primary">Show</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
