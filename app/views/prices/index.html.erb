<div class="page-header">
  <h1>
    Prices
  
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Range</th>
        <th>Number of Venues</th>
        <th>Actions</th>
      </tr>

      <% @prices.each do |price| %>
      <tr>
        <td><%= price.range %></td>
        <td><%= Venue.where(:average_price => price.id).count %> </td>
        <td>
          <a href="/prices/<%= price.id %>" class="btn btn-primary">Show</a>
          <a href="/prices/<%= price.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_price/<%= price.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
