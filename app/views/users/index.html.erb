<div class="page-header">
  <h1>
    Users
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First</th>
        <th>Last </th>
        <th>Email </th>
        <th>Last logged-on </th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <td><%= user.last_name%><td><%= user.email%></td><td><%= time_ago_in_words(user.updated_at)%> ago</td>
      </td>
    </td>


  </tr>
  <% end %>
</table>
</div>
</div>
