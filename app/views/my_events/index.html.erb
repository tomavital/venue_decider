<div class="page-header">
  <h1>
    My  Events
    <a href="/events/new" class="btn btn-lg btn-success">New Event</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Title</th>
        <th>Time</th>
        <th>Venue</th>

      </tr>

      <% @my_events.each do |myevent| %>
      <tr>



        <td><a href="/events/<%=myevent.id%>"><%= myevent.title %></a></td>
        <td><%= myevent.date %></td>
        <td><a href="/venues/<%=myevent.venue_id%>">
          <%= Venue.find_by(:id => myevent.venue_id).name %></a></td>



      </tr>

      <% end %>
    </table>
  </div>
</div>
