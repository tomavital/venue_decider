<div class="page-header">
  <h3>Cuisine #<%= @cuisine.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Cuisine name</dt>
      <dd><%= @cuisine.cuisine_name %></dd>
      <dt>Number of Venues</dt>
      <dd><%= Venue.where(:cuisine => @cuisine.id).count %> </dd>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/cuisines" class="btn btn-primary">
        Back
      </a>
      <a href="/cuisines/<%= @cuisine.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_cuisine/<%= @cuisine.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
<h4>Venues</h4>
<ul>
  <% Venue.where(:cuisine => @cuisine.id).each do |venue| %>
  <li><a href="/venues/<%=venue.id%>"><%= venue.name %></a> </li>
  <% end %>

</ul>
<h4>Users who Like</h4>
<ul>

  <% Preference.where(:cuisine_id => @cuisine.id).each do |preference| %>

  <li><%= User.find_by(:id => preference.user_id).first_name  %></li>
  <% end  %>

</ul>
<div class="page-header">
  <h3>Add Venue</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_venue" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <textarea id="name" name="name" placeholder="Name" class="form-control" rows="3"><%= @venue.name %></textarea>
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <textarea id="address" name="address" placeholder="Address" class="form-control" rows="3"><%= @venue.address %></textarea>
      </div>

      <!-- Label and input for cuisine -->
    <input type="hidden" name="cuisine"  value="<%= @cuisine.id%>">

      <!-- Label and input for average_price -->
      <div class="form-group">
        <label for="average_price" class="control-label">
          Average price
        </label>
        <%= select_tag(:average_price, options_from_collection_for_select(Price.all, :id, :range, @venue.average_price), :class => "form-control") %>
        <!-- <input type="text" id="average_price" name="average_price" placeholder="Average price" class="form-control" value="<%= @venue.average_price %>"> -->
      </div>

      <!-- Label and input for website -->
      <div class="form-group">
        <label for="website" class="control-label">
          Website
        </label>

        <textarea id="website" name="website" placeholder="Website" class="form-control" rows="3"><%= @venue.website %></textarea>
      </div>

      <button class="btn btn-success">
        Create Venue
      </button>
      or
      <a href="/venues">Cancel</a>
    </form>
  </div>
</div>
