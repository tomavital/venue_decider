<div class="page-header">
  <h1>
    Preferences
    <a href="/preferences/new" class="btn btn-lg btn-success">New Preference</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Cuisine</th>
        <th>Actions</th>
      </tr>

      <% @preferences.each do |preference| %>
      <tr>
        <td><%= User.find_by(:id => preference.user_id).try(:first_name) %> <%= User.find_by(:id => preference.user_id).try(:last_name) %></td>
        <td><%= Cuisine.find_by(:id => preference.cuisine_id).try(:cuisine_name) %></td>
        <td>
          <a href="/preferences/<%= preference.id %>" class="btn btn-primary">Show</a>
          <a href="/preferences/<%= preference.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_preference/<%= preference.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
