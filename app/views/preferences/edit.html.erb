<!-- Validation failure messages -->
<% if @preference.errors.any? %>
  <% @preference.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Preference #<%= @preference.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_preference/<%= @preference.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id"  value="<%= current_user.id%>">
    </div>


      <!-- Label and input for cuisine_id -->
      <div class="form-group">
        <label for="cuisine_id" class="control-label">
          Cuisine
        </label>

          <%= select_tag(:cuisine_id, options_from_collection_for_select(Cuisine.all, :id, :cuisine_name, @preference.cuisine_id), :class => "form-control") %>

      <button class="btn btn-warning">
        Update Preference
      </button>
      or
      <a href="/preferences/<%= @preference.id %>">Cancel</a>
    </form>
  </div>
</div>
